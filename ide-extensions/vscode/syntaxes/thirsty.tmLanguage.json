{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Thirsty-Lang",
    "scopeName": "source.thirsty",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#functions"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.thirsty",
                    "match": "#.*$"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.thirsty",
                    "match": "\\b(if|else|elif|for|while|break|continue|return|class|def|import|from|as|try|except|finally|with|lambda|yield|async|await)\\b"
                },
                {
                    "name": "constant.language.thirsty",
                    "match": "\\b(True|False|None)\\b"
                },
                {
                    "name": "storage.type.thirsty",
                    "match": "\\b(int|str|float|bool|list|dict|set|tuple)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.thirsty",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.thirsty",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.thirsty",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.thirsty",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.thirsty",
                    "match": "\\b\\d+(\\.\\d+)?\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.thirsty",
                    "match": "(\\+|\\-|\\*|\\/|%|==|!=|<=|>=|<|>|and|or|not|in|is)"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.thirsty",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                }
            ]
        }
    }
}