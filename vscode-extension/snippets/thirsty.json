{
  "Variable Declaration": {
    "prefix": "drink",
    "body": [
      "drink ${1:varname} = ${2:value}"
    ],
    "description": "Declare a variable"
  },
  "Output": {
    "prefix": "pour",
    "body": [
      "pour ${1:expression}"
    ],
    "description": "Output a value"
  },
  "Comment": {
    "prefix": "//",
    "body": [
      "// ${1:comment}"
    ],
    "description": "Add a comment"
  },
  "If Statement": {
    "prefix": "thirsty",
    "body": [
      "thirsty ${1:condition}",
      "  ${2:// code}",
      "hydrated",
      "  ${3:// else code}"
    ],
    "description": "Conditional statement (Thirsty+)"
  },
  "Function": {
    "prefix": "glass",
    "body": [
      "glass ${1:functionName}(${2:params})",
      "  ${3:// function body}",
      "  return ${4:value}"
    ],
    "description": "Define a function (Thirsty++)"
  },
  "Loop": {
    "prefix": "refill",
    "body": [
      "refill ${1:times} times",
      "  ${2:// loop body}"
    ],
    "description": "Create a loop (Thirsty++)"
  },
  "Class": {
    "prefix": "fountain",
    "body": [
      "fountain ${1:ClassName}",
      "  drink ${2:property} = ${3:value}",
      "  ",
      "  glass ${4:method}()",
      "    ${5:// method body}"
    ],
    "description": "Define a class (ThirstOfGods)"
  },
  "Async Function": {
    "prefix": "cascade",
    "body": [
      "cascade glass ${1:functionName}(${2:params})",
      "  drink ${3:result} = await ${4:promise}",
      "  return ${3:result}"
    ],
    "description": "Define an async function (ThirstOfGods)"
  }
}
